<h1>Page View</h1>
<div class="newPageWrapper">
    <form class="newPage" action="/main/page/{{page.pageId}}" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <section class="layerOne">
            <label id="titleLabel" for="title">Page Title: </label>
            <input id="title" name="title" type="text" value="{{page.title}}">
        </section>
        <section class="layerTwo">
            <label id="journalType">Journal Title: {{pageJournal.title}}</label>
        </section>
        <section class="layerThree">
            <div><label id="contentLabel" for="content">Content:</label></div>
            <!--<input id="content" name="content" type="hidden">-->
            <div id="editorjs"></div>

        </section>
        <section class="layerFour">
            <!-- <input type="submit" value="Add" class="addButton"> -->
            <button class="saveButton"><a href="#">Save</a> </button> <br>
            <button><a href="/main">Cancel</a></button>
        </section>
    </form>
</div>

