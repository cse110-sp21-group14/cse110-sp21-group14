<h1>Add a New Daily</h1>
<div class="newPageWrapper">
    <form class="newPage" action="/main/post/daily/{{month}}/{{date}}/{{year}}" method="POST">
        <section class="layerOne">
            <label id="titleLabel" for="title">Calendar Header: </label>
            <input id="title" name="title" type="text">
        </section>
        <section class="layerTwo">
            <label id="journalType">Date: {{detailsStr}}</label>
        </section>
        <section class="layerThree">
            <div><label id="contentLabel" for="content">Content:</label></div>
            <!--<input id="content" name="content" type="hidden">-->
            <div id="editorjs"></div>
        </section>
        <section class="layerFour">
            <!-- <input type="submit" value="Add" class="addButton"> -->
            <button class="addButton"><a href="#">Add</a> </button> <br>
            <button><a href="/main">Cancel</a></button>
        </section>
    </form>
</div>

