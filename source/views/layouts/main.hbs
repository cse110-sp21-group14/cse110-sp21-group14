    <div class="container">
        <!-- Top nav bar-->
        <div class="menuBar">
            <ul>
                <li class="menuItem" ><a href="/main">My Journal</a></li>
                <li class="menuItem" ><a href="/calendar">My Calendar</a></li>
                <li class="menuItem" ><a href="#">My Settings</a></li>
                <li class="signOut"><a href="/auth/logout">Sign Out</a></li>
            </ul>
        </div>

        <div class="sidebar">
            <div class="search">
               <input style="font-family: 'Mukta', sans-serif;" type="text">
            </div>
            <button class="buttonAdd"><a href="/main">Daily Entries</a></button>
            <button class="buttonAdd"><a href="/main/add/journal">Add Journal</a></button>
            {{#each journals}}
            <div class="journal-item">
                <div style="float: left">
                    <button><span>&#9662;</span></button> 
                    <a href="/main/journal/{{journalId}}" >{{title}}</a>
                </div>
                
                
                <div id="pageButtons" style="float: right">
                    <div class="pageButtons-item">
                        <button>
                            <a href="/main/add/{{journalId}}/page" >Add Page</a>
                        </button>
                    </div>

                    <div class="pageButtons-item">
                        <form action="/main/journal/{{journalId}}" method="POST">
                            <button type="submit">Delete</button>
                            <input type="hidden" name="_method" value="DELETE">
                        </form>
                    </div>
                    
                </div>
                
                
                <ul>
                    {{#each pages}}
                        
                        <li>
                            <ul class="journal-item-details">
                                <li>&#9670;<a href="/main/page/{{pageId}}">{{pageTitle}}</a></li>
                                <li><form action="/main/page/{{pageId}}" method="POST" >
                                    <input type="hidden" name="_method" value="DELETE">
                                    <button type="submit">Delete</button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                        
                    {{/each}}
                </ul>
                <br><br>
            </div>
            {{/each}}
        </div>
        <div class="viewarea">
            <!-- <p>test</p> -->
            {{{body}}}
        </div>
    </div>
</body>
</html>