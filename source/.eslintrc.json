{
    "env": {
        "es6": true,
        "node": true,
        "browser": true,
        "amd": true
    },
    "globals": {
        "$": true,
        "require": true,
        "process": true,
        "test": true,
        "expect": true,
        "PR": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "ignorePatterns": [
        "./documentation/scripts/prettify/lang-css.js",
        "./documentation/scripts/prettify/prettify.js",
        "./documentation/scripts/linenumber.js"
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            2,
            "double"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}